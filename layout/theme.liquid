        <script>
          (function() {
            const form = document.getElementById('signup-modal-form');
            const formContent = document.getElementById('signup-form-content');
            const successContent = document.getElementById('signup-success-content');
            const errorDiv = document.getElementById('signup-form-error');
            const submitBtn = document.getElementById('signup-submit-btn');
            const emailInput = document.getElementById('signup-modal-email');
            const copyBtn = document.getElementById('copy-code-btn');
            const copyText = document.getElementById('copy-code-text');
            const copyIcon = document.getElementById('copy-icon');
            const checkIcon = document.getElementById('check-icon');
            const discountCode = 'GGSAUTH20';

            if (!form) return;

            // Copy code functionality
            if (copyBtn) {
              copyBtn.addEventListener('click', function () {
                navigator.clipboard.writeText(discountCode).then(function () {
                  copyText.textContent = 'Copied!';
                  copyIcon.classList.add('hidden');
                  checkIcon.classList.remove('hidden');
                  setTimeout(function () {
                    copyText.textContent = 'Copy';
                    copyIcon.classList.remove('hidden');
                    checkIcon.classList.add('hidden');
                  }, 2000);
                }).catch(function (err) {
                  console.error('Failed to copy:', err);
                  copyText.textContent = 'Error';
                  setTimeout(function () {
                    copyText.textContent = 'Copy';
                  }, 2000);
                });
              });
            }

            // Form submission handler
            form.addEventListener('submit', function(e) {
              e.preventDefault();
              
              const email = emailInput.value.trim();
              
              if (!email || !emailInput.validity.valid) {
                errorDiv.textContent = 'Please enter a valid email address.';
                errorDiv.classList.remove('hidden');
                return;
              }

              // Check for development mode (bypass submission to avoid CAPTCHA)
              const urlParams = new URLSearchParams(window.location.search);
              const devMode = urlParams.get('dev') === 'true' || localStorage.getItem('signupDevMode') === 'true';

              // Disable submit button
              if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.textContent = devMode ? 'Showing code...' : 'Submitting...';
              }

              // Hide error
              errorDiv.classList.add('hidden');

              // Development mode: skip submission and show code immediately
              if (devMode) {
                setTimeout(function() {
                  formContent.classList.add('hidden');
                  successContent.classList.remove('hidden');
                  if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Get 20% off';
                  }
                  try {
                    localStorage.setItem('signupModalDismissed', 'true');
                  } catch (err) {
                    console.debug('Storage unavailable', err);
                  }
                }, 500);
                return;
              }

              // Create form data
              const formData = new FormData();
              formData.append('contact[email]', email);
              formData.append('contact[tags]', 'Signup Modal');
              formData.append('contact[accepts_marketing]', 'true');

              // Submit via AJAX to avoid page reload and reduce CAPTCHA triggers
              fetch('/contact', {
                method: 'POST',
                body: formData,
                headers: {
                  'X-Requested-With': 'XMLHttpRequest'
                },
                redirect: 'follow'
              })
              .then(function(response) {
                // Handle redirects (Shopify may redirect on success)
                if (response.redirected) {
                  return { success: true, redirected: true, status: response.status, ok: response.ok };
                }
                
                return response.text().then(function(html) {
                  // Parse response to check for success indicators
                  const parser = new DOMParser();
                  const doc = parser.parseFromString(html, 'text/html');
                  
                  // Check for various success indicators in Shopify contact forms
                  const htmlLower = html.toLowerCase();
                  const hasSuccess = htmlLower.includes('posted_successfully') || 
                                    htmlLower.includes('success') || 
                                    htmlLower.includes('thank you') ||
                                    htmlLower.includes('message was sent') ||
                                    doc.querySelector('[class*="success"]') ||
                                    doc.querySelector('[id*="success"]');

                  // Check for error indicators (but be careful not to match "success")
                  const hasError = (htmlLower.includes('error') && !htmlLower.includes('no error')) || 
                                 htmlLower.includes('failed') ||
                                 htmlLower.includes('invalid') ||
                                 doc.querySelector('[class*="error"]:not([class*="success"])');

                  return { 
                    success: hasSuccess && !hasError, 
                    html: html, 
                    status: response.status, 
                    ok: response.ok,
                    redirected: false
                  };
                });
              })
              .then(function(result) {
                // Show success content if submission was successful
                if (result.success || result.redirected || (result.ok && result.status === 200)) {
                  formContent.classList.add('hidden');
                  successContent.classList.remove('hidden');
                  
                  // Store submission in localStorage to prevent showing modal again
                  try {
                    localStorage.setItem('signupModalDismissed', 'true');
                  } catch (err) {
                    console.debug('Storage unavailable', err);
                  }
                } else {
                  // Show error message
                  errorDiv.textContent = 'Unable to submit. Please try again or contact support.';
                  errorDiv.classList.remove('hidden');
                  
                  // Re-enable submit button
                  if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Get 20% off';
                  }
                }
              })
              .catch(function(error) {
                console.error('Form submission error:', error);
                
                // On network errors or CORS issues, still show the code
                // This handles cases where CAPTCHA or other issues occur
                // but we want to provide a good user experience
                formContent.classList.add('hidden');
                successContent.classList.remove('hidden');
                
                // Store submission attempt
                try {
                  localStorage.setItem('signupModalDismissed', 'true');
                } catch (err) {
                  console.debug('Storage unavailable', err);
                }
              })
              .finally(function() {
                // Only reset button if we're still showing the form
                if (submitBtn && !formContent.classList.contains('hidden')) {
                  submitBtn.disabled = false;
                  submitBtn.textContent = 'Get 20% off';
                }
              });
            });
          })();
        </script>
