<div class="flex flex-col items-center my-8 bg-[#a7c248] py-8">
<div class="flex flex-col space-y-5">
    <h2 class="text-center text-3xl uppercase font-semibold">
           {{ section.settings.subheading }}
    </h2>
     
  
    <h1 class="text-center text-3xl uppercase font-bold">
        {{ section.settings.title }}
    </h1>
</div>    

    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for product in section.settings.secondary_collection.products limit: section.settings.number_of_products_to_show %}
                {% render 'secondary-product-card', product: product %}
            {% else %}
                {% for item in (1..3) %}
                    {% render 'product-card-placeholder' %}
                {% endfor %}
            {% endfor %}
        </div>
  
    </div>
   <!-- Button below the featured collection -->
    <div class="relative mt-8">
        <div class="h-12 bg-[#ffb045] rounded-lg">
            <a href="{{ section.settings.button_link }}" class="relative uppercase text-2xl bg-white text-black border-[0.5px] border-black rounded-lg font-bold py-2 px-8 transition duration-1000 ease-in-out hover:scale">
                {{ section.settings.button_text}}
            </a>
        </div>
    </div>
</div>



{% schema %}
{
    "name": "Secondary Collection",
    "settings": [
            {
                "type": "text",
                "id": "subheading",
                "default": "Uncovering Authentic Flavours",
                "label": "Subheading"
            },
            {
                "type": "text",
                "id": "title",
                "default": "Secondary Collection",
                "label": "Title"
            },
            {
                "type": "collection",
                "id": "secondary_collection",
                "label": "Collection"
            },
            {
                "type": "range",
                "id": "number_of_products_to_show",
                "min": 3,
                "max": 12,
                "default": 3,
                "label": "Number of products to show",
                "step": 1
            },
            {
                "type": "text",
                "id": "button_text",
                "default": "View All",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button Link",
                "default": "/collections/all"
            }
        ],
        "presets": [
            {
                "name": "Secondary Collection"
            }
        ]
}
{% endschema %}