<div class="relative bg-cover bg-top h-80"
style="background-image: url({{ section.settings.banner_image | img_url: 'master' }});">
    <div class="absolute inset-0 flex items-center justify-center">
        <div class="absolute h-12 bg-[#ffb045] rounded-lg transition-transform duration-500 ease-in-out transform hover:translate-y-[-1rem]">
            <a href="{{ section.settings.banner_link }}" class="relative uppercase text-2xl bg-white text-black border-[0.5px] border-black rounded-lg font-bold py-2 px-8 transition duration-1000 ease-in-out hover:border-[1px] transform">
            {{ section.settings.banner_text }}
        </a>
        </div>
        
    </div>
</div>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "url",
      "id": "banner_link",
      "label": "Banner Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "A blend of natural herbs & spices"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Banner"
    }
  ]
}
{% endschema %}


