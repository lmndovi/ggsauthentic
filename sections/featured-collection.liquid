<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl uppercase font-bold">
        {{ section.settings.title }}
    </h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
                {% render 'product-card', product: product %}
            {% else %}
                {% for item in (1..4) %}
                    {% render 'product-card-placeholder' %}
                {% endfor %}
            {% endfor %}
        </div>
  
    </div>
   <!-- Button below the featured collection -->
    <div class="relative mt-8">
        <div class="h-12 bg-[#ffb045] rounded-lg">
            <a href="/collections/all" class="relative uppercase text-2xl bg-white text-black border-[0.5px] border-black rounded-lg font-bold py-2 px-8 transition duration-1000 ease-in-out hover:scale">
                {{ section.settings.button_text}}
            </a>
        </div>
    </div>
</div>



{% schema %}
{
    "name": "Featured Collection",
    "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "Featured Collection",
                "label": "Title"
            },
            {
                "type": "collection",
                "id": "featured_collection",
                "label": "Collection"
            },
            {
                "type": "range",
                "id": "number_of_products_to_show",
                "min": 4,
                "max": 12,
                "default": 4,
                "label": "Number of products to show",
                "step": 1
            },
            {
                "type": "text",
                "id": "button_text",
                "default": "View All",
                "label": "Button Text"
            }
        ],
        "presets": [
            {
                "name": "Featured Collection"
            }
        ]
}
{% endschema %}