<!-- Search Overlay Backdrop -->
<div x-show="searchBarOpen" 
     x-transition:enter="transition ease-out duration-200"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-150"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     x-on:click="searchBarOpen = false"
     class="fixed inset-0 bg-black/20 backdrop-blur-sm z-40"
     style="display: none;"></div>

<!-- Search Bar -->
<div x-show="searchBarOpen" 
     x-transition:enter="transition ease-out duration-200"
     x-transition:enter-start="opacity-0 -translate-y-2"
     x-transition:enter-end="opacity-100 translate-y-0"
     x-transition:leave="transition ease-in duration-150"
     x-transition:leave-start="opacity-100 translate-y-0"
     x-transition:leave-end="opacity-0 -translate-y-2"
     class="fixed inset-x-0 top-0 z-50 bg-white/98 backdrop-blur-md shadow-xl border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-white hidden sm:block">Search Products</h2>
            <button type="button" 
                    x-on:click="searchBarOpen = false" 
                    class="ml-auto p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-2"
                    aria-label="Close search">
                {% render 'icon-close' %}
            </button>
        </div>
        <form action="{{ routes.search_url }}" method="get" class="relative" x-data="{ 
            query: '',
            suggestions: [],
            selectedIndex: -1,
            showSuggestions: false,
            loading: false,
            searchTimeout: null,
            isMobile: window.innerWidth < 640,
            get placeholder() { return this.isMobile ? 'Search for products...' : 'Search for products, collections...'; }
        }" 
        x-init="
            const updateMobile = () => { isMobile = window.innerWidth < 640; };
            window.addEventListener('resize', updateMobile);
            updateMobile();
        "
        @submit.prevent="window.location.href = '{{ routes.search_url }}?q=' + encodeURIComponent(query)">
            <div class="relative flex items-center">
                <div class="absolute left-4 text-gray-400 pointer-events-none z-10">
                    {% render 'icon-search' %}
                </div>
                <input type="search" 
                       name="q" 
                       x-model="query"
                       :placeholder="placeholder"
                       autocomplete="off"
                       class="w-full pl-12 pr-14 py-4 bg-gray-50 border-2 border-gray-200 rounded-xl text-base text-gray-900 placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-[#bd2d2d] focus:border-[#bd2d2d] transition-all duration-200 hover:border-gray-300"
                       @input="
                           clearTimeout(searchTimeout);
                           if (query.length >= 2) {
                               loading = true;
                               searchTimeout = setTimeout(() => {
                                   fetch('/search/suggest.json?q=' + encodeURIComponent(query) + '&resources[type]=product&resources[limit]=5')
                                       .then(r => r.json())
                                       .then(data => {
                                           // Handle different response formats
                                           if (data.resources && data.resources.results && data.resources.results.products) {
                                               suggestions = data.resources.results.products.map(p => ({
                                                   id: p.id,
                                                   title: p.title,
                                                   url: p.url,
                                                   image: p.image || (p.featured_image ? p.featured_image : null)
                                               }));
                                           } else if (data.results && data.results.products) {
                                               suggestions = data.results.products.map(p => ({
                                                   id: p.id,
                                                   title: p.title,
                                                   url: p.url,
                                                   image: p.image || (p.featured_image ? p.featured_image : null)
                                               }));
                                           } else {
                                               suggestions = [];
                                           }
                                           showSuggestions = suggestions.length > 0;
                                           loading = false;
                                       })
                                       .catch(() => {
                                           loading = false;
                                           showSuggestions = false;
                                           suggestions = [];
                                       });
                               }, 300);
                           } else {
                               suggestions = [];
                               showSuggestions = false;
                           }
                       "
                       @keydown.arrow-down.prevent="selectedIndex = Math.min(selectedIndex + 1, suggestions.length - 1)"
                       @keydown.arrow-up.prevent="selectedIndex = Math.max(selectedIndex - 1, -1)"
                       @keydown.enter.prevent="
                           if (selectedIndex >= 0 && suggestions[selectedIndex]) {
                               window.location.href = suggestions[selectedIndex].url;
                           } else {
                               $el.closest('form').submit();
                           }
                       "
                       @focus="if (suggestions.length > 0) showSuggestions = true"
                       @blur="setTimeout(() => showSuggestions = false, 200)">
                <button type="submit" 
                        class="absolute right-2 px-4 py-2 bg-[#bd2d2d] text-white rounded-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-[#bd2d2d] focus:ring-offset-2 transition-colors duration-200 font-medium text-sm sm:text-base z-10">
                    Search
                </button>
            </div>
            
            <!-- Autocomplete Suggestions Dropdown -->
            <div x-show="showSuggestions && suggestions.length > 0" 
                 x-transition:enter="transition ease-out duration-200"
                 x-transition:enter-start="opacity-0 translate-y-1"
                 x-transition:enter-end="opacity-100 translate-y-0"
                 x-transition:leave="transition ease-in duration-150"
                 x-transition:leave-start="opacity-100 translate-y-0"
                 x-transition:leave-end="opacity-0 translate-y-1"
                 class="absolute top-full left-0 right-0 mt-2 bg-white rounded-xl shadow-xl border border-gray-200 max-h-96 overflow-y-auto z-50">
                <template x-for="(product, index) in suggestions" :key="product.id">
                    <a :href="product.url" 
                       :class="{'bg-gray-50': selectedIndex === index}"
                       class="flex items-center gap-4 px-4 py-3 hover:bg-gray-50 transition-colors duration-150 border-b border-gray-100 last:border-b-0">
                        <img :src="product.image || '/assets/no-image.png'" 
                             :alt="product.title"
                             class="w-12 h-12 sm:w-16 sm:h-16 object-cover rounded-lg flex-shrink-0"
                             @error="$el.src='/assets/no-image.png'">
                        <div class="flex-1 min-w-0">
                            <p class="text-sm sm:text-base font-medium text-gray-900 truncate" x-text="product.title"></p>
                            <p class="text-xs sm:text-sm text-gray-500" x-text="'Product'"></p>
                        </div>
                        <div class="flex-shrink-0">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </div>
                    </a>
                </template>
            </div>
            
            <!-- Loading Indicator -->
            <div x-show="loading" 
                 class="absolute top-full left-0 right-0 mt-2 bg-white rounded-xl shadow-xl border border-gray-200 p-4 z-50">
                <div class="flex items-center justify-center gap-2">
                    <div class="w-5 h-5 border-2 border-[#bd2d2d] border-t-transparent rounded-full animate-spin"></div>
                    <span class="text-sm text-gray-600">Searching...</span>
                </div>
            </div>
        </form>
    </div>
</div>
    </div>

