<div class="w-full py-6 px-3">
    <div class=" bg-white  rounded-lg overflow-hidden group">
            <a href="{{ product.url }}">
            {% if product.media.size > 1 %}
                <div class="h-80 overflow-hidden relative">
                    <img class="w-full h-full object-cover transition duration-700 ease-in-out group-hover:opacity-0 absolute inset-0" src="{{ product.media.first | img_url: 'medium' }}" alt="{{ product.media.first.preview_image.alt }}">
                    <img class="w-full h-full object-cover transition duration-700 ease-in-out opacity-0 group-hover:opacity-100 hover:scale-105 absolute inset-0" src="{{ product.media.last | img_url: 'medium' }}" alt="{{ product.media.last.preview_image.alt }}">
                </div>
            {% elsif product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform" src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">
                </div>
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
            </a>   
    <div class="flex flex-col p-4">

        <a class="text-gray-700 uppercase font-medium" href="{{ product.url }}">
            {{ product.title  |  truncatewords: 3}}
        </a>
        <p class="text-gray-500 opacity-0 transform translate-y-4 transition duration-500 group-hover:translate-y-0 group-hover:opacity-100">{{ product.price |  money }}</p>
    </div>

    </div>
</div>